{
  "compilerOptions": {
    "outDir": "build",
    "module": "ESNext",
    "target": "ES5",
    "skipLibCheck": true,
    "declaration": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
//    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.tsx", "src/**/*.stories.tsx"]
}